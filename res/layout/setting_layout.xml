<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff6600" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#ff6600"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/sign_in_heading"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:text="FusePOS Settings"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/signin_control_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sign_in_heading"
                android:padding="20dp" >

                <LinearLayout
                    android:id="@+id/setting_rl_d_host_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="FusePOS IP"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/instance_d_host_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:drawablePadding="5dp"
                        android:drawingCacheQuality="auto"
                        android:imeOptions="actionNext"
                        android:inputType="textImeMultiLine" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting_rl_d_db_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_rl_d_host_name"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DB Name"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/instance_d_db_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:drawablePadding="5dp"
                        android:drawingCacheQuality="auto"
                        android:imeOptions="actionNext"
                        android:inputType="textImeMultiLine" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting_rl_d_db_username"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_rl_d_db_name"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DB Username"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/instance_d_db_username"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:drawablePadding="5dp"
                        android:drawingCacheQuality="auto"
                        android:imeOptions="actionNext"
                        android:inputType="textImeMultiLine" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting_rl_d_db_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_rl_d_db_username"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DB Password"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/instance_d_db_password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:drawablePadding="5dp"
                        android:drawingCacheQuality="auto"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword" />
                </LinearLayout>

                <com.fusepos.utils.SAutoBgButton
                    android:id="@+id/setting_save_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/setting_rl_d_db_password"
                    android:background="#330000"
                    android:text="Save"
                    android:textColor="#ffffff" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>